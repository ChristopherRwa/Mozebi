# Ativar URL rewriting
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Reescrever URLs para ocultar a extensão .php
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME}.php -f
    RewriteRule ^(.*)$ $1.php [NC,L]
</IfModule>

# Configurações seguras para XAMPP local
<IfModule mod_php7.c>
    # Apenas PHP padrão do XAMPP, sem handlers do cPanel
</IfModule>

# Configurações cPanel (mantidas apenas se existirem módulos cPanel)
<IfModule mime_module>
    AddHandler application/x-httpd-ea-php74 .php .php7 .phtml
</IfModule>

# Opcional: FollowSymLinks se necessário
# Options +FollowSymLinks
